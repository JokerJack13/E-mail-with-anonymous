<div class="confirmPage">
  <div class='container'>
    <h1 class="confirmPage_title">お問い合わせ内容</h1>
    <%= form_with model: @ask, url: askings_thanks_path, method: :post, local: true do |f| %>
      <div class="confirmForm_item">
        <h3>伝えたい人の名前</h3>
        <div>
          <%= f.hidden_field :name %>
          <%= @ask.name %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>伝えたい人のメールアドレス</h3>
        <div>
          <%= f.hidden_field :email %>
          <%= @ask.email %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>伝えたい人のとの関係</h3>
        <div>
          <%= f.hidden_field :relationship %>
          <%= @ask.relationship %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>伝えたいこと</h3>
        <div>
          <% if @ask.content.empty? %>
           特になし
          <% else %>
           <%= @ask.content %>
          <% end%>
          <%= f.hidden_field :content %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to "戻る", root_path, class: "btn btn-info"%>
        <%= f.submit '送信', :class => 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
